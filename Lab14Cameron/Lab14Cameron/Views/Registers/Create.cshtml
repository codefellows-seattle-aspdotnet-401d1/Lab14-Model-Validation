@model Lab14Cameron.Models.Register

@{
    ViewData["Title"] = "Create";
}
<link href="~/MainSS.css" rel="stylesheet" type="text/css" />

<h3>Register A Golden Age MC</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MC" class="control-label"></label>
                <input asp-for="MC" class="form-control" />
                <span asp-validation-for="MC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hometown" class="control-label"></label>
                <input asp-for="Hometown" class="form-control" />
                <span asp-validation-for="Hometown" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeState" class="control-label"></label>
                <input asp-for="HomeState" class="form-control" />
                <span asp-validation-for="HomeState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Albums" class="control-label"></label>
                <input asp-for="Albums" class="form-control" />
                <span asp-validation-for="Albums" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstAlbumTitle" class="control-label"></label>
                <input asp-for="FirstAlbumTitle" class="form-control" />
                <span asp-validation-for="FirstAlbumTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstAlbum" class="control-label"></label>
                <input asp-for="FirstAlbum" class="form-control" />
                <span asp-validation-for="FirstAlbum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
